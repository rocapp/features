{
    "name": "Android SDK",
    "id": "android-sdk",
    "version": "0.0.6",
    "description": "Android SDK",
    "containerEnv": {
        "ANDROID_HOME": "/opt/android-sdk",
        "ANDROID_SDK_ROOT": "/opt/android-sdk",
        "ANDROID_SDK_HOME": "/opt/android-sdk",
        "ANDROID_AVD_HOME": "/opt/android-sdk/avd",
        "PATH": "$PATH:$ANDROID_HOME/cmdline-tools/latest/bin:$ANDROID_HOME/platform-tools:$ANDROID_HOME/emulator"
    },
    "options": {
        "platforms": {
            "type": "string",
            "description": "Platform version to install",
            "default": "34",
            "enum": [
                "none",
                "34",
                "33",
                "32",
                "31",
                "30",
                "29",
                "28",
                "27",
                "26",
                "25",
                "24",
                "23",
                "22",
                "21",
                "20",
                "19",
                "18",
                "17",
                "16",
                "15",
                "14",
                "13",
                "12",
                "11",
                "10",
                "9",
                "8",
                "7",
                "TiramisuPrivacySandbox",
                "33-ext4"
            ]
        },
        "build-tools": {
            "default": "34.0.0",
            "type": "string",
            "description": "Build tools version to install",
            "enum": [
                "none",
                "34.0.0",
                "30.0.3",
                "33.0.1",
                "33.0.2",
                "19.1.0",
                "20.0.0",
                "21.1.2",
                "22.0.1",
                "23.0.1",
                "23.0.2",
                "23.0.3",
                "24.0.0",
                "24.0.1",
                "24.0.2",
                "24.0.3",
                "25.0.0",
                "25.0.1",
                "25.0.2",
                "25.0.3",
                "26.0.0",
                "26.0.1",
                "26.0.2",
                "26.0.3",
                "27.0.0",
                "27.0.1",
                "27.0.2",
                "27.0.3",
                "28.0.0",
                "28.0.1",
                "28.0.2",
                "28.0.3",
                "29.0.0",
                "29.0.1",
                "29.0.2",
                "29.0.3",
                "30.0.0",
                "30.0.1",
                "30.0.2",
                "30.0.3",
                "31.0.0",
                "32.0.0",
                "32.1.0-rc1",
                "33.0.0",
                "33.0.1",
                "33.0.2",
                "34.0.0-rc1"
            ]
        },
        "emulator": {
            "type": "boolean",
            "default": true,
            "description": "Install emulator"
        },
        "emulator-name": {
            "type": "string",
            "default": "devcontainer-android",
            "description": "a name for the emulator AVD"
        }
    }
}
